<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="text-center mb-5 animate-fade-in">
        <h1 class="fw-bold mb-3"><i class="fas fa-user-lock text-primary me-2"></i>管理者ログイン</h1>
        <p class="text-muted">管理画面へアクセスするにはログインが必要です。</p>
      </div>

      <div class="card border-0 shadow-lg animate-slide-up">
        <div class="card-body p-4">
          <% if (message) { %>
            <div class="alert alert-danger" role="alert">
              <%= message %>
            </div>
          <% } %>
          <form action="/admin/login" method="POST">
            <div class="mb-3">
              <label for="username" class="form-label fw-bold"><i class="fas fa-user me-2 text-primary"></i>ユーザー名</label>
              <input type="text" class="form-control form-control-lg" id="username" name="username" required>
            </div>
            <div class="mb-4">
              <label for="password" class="form-label fw-bold"><i class="fas fa-lock me-2 text-primary"></i>パスワード</label>
              <input type="password" class="form-control form-control-lg" id="password" name="password" required>
            </div>
            <div class="d-grid">
              <button type="submit" class="btn btn-primary btn-lg shadow">
                <i class="fas fa-sign-in-alt me-2"></i>ログイン
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
